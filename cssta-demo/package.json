{
  "name": "cssta-demo",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-syntax-jsx": "^6.13.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-react": "^6.5.0",
    "react-scripts": "^0.7.0"
  },
  "dependencies": {
    "cssnano-cli": "^1.0.5",
    "cssta": "^0.2.2",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run branch-src; npm run build-cssta || :; react-scripts build || :; npm run restore-src",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "branch-src": "cp -r src src-original",
    "restore-src": "rm -rf src; mv src-original src",
    "build-cssta": "rm public/styles.css || :; babel src --out-dir build/cssta-demo; cssnano public/styles.css public/styles.css"
  }
}
